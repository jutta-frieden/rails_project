<h1>Listing exercises</h1>


<table class="table table-striped">
  <thead>
    <tr>
      <th><%= sortable "name", "Exercise name"%></th>
      <th>Description</th>
      <th><%= sortable "body_part", "Body part"%></th>
      <th>Repetitions</th>
      <!--<th></th>-->
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @exercises.each do |exercise| %>
      <tr>
        <td><%= link_to exercise.name , exercise%></td>
        <td><%= exercise.description %></td>
        <td><%= exercise.body_part.name %></td>
        <td><%= exercise.repetitions %></td>
        <!--<td><%= link_to 'Show', exercise %></td>-->
        <td><%= link_to 'Edit', edit_exercise_path(exercise) %></td>
        <td><%= link_to 'Delete', exercise, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%=  button_to 'New Exercise', new_exercise_path, :class => "btn-success", :method => :get %>
